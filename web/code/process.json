{
  "apps" : [{
    "name": "mol",
    "script": "server.js",
    "node_args": "--max_old_space_size=1024",
    "max_memory_restart": "1G",
    "watch": false,
    "env": {
      "NODE_ENV": "production"
    },
    "env_test": {
      "NODE_ENV": "test"
    },
    "merge_logs": true,
    "error_file": "../logs/mol-err.log",
    "out_file": "../logs/mol-out.log",
    "log_date_format": "YYYY-MM-DD HH:mm Z"
  }]
}
